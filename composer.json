{
    "name": "php-framework-code-generator/core",
    "description": "",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Derrick Heesbeen",
            "email": "derrick@heesbeen.nu"
        }
    ],
    "autoload": {
        "psr-4": {
            "PhpFrameworkCodeGenerator\\": "src/",
            "PhpFrameworkCodeGeneratorTests\\": "tests/"
        }
    },
    "require": {
        "nette/php-generator": "^4.1",
        "servo/fluidxml": "^2.0",
        "twig/twig": "^3.0",
        "symfony/yaml": "^6.0",
        "symfony/filesystem": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "phpstan/phpstan": "*",
        "squizlabs/php_codesniffer": "*",
        "phpmd/phpmd": "*",
        "friendsofphp/php-cs-fixer" : "*",
        "infection/infection": "*",
        "php-parallel-lint/php-parallel-lint": "*"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "phpro/grumphp": true
        }
    }
}
